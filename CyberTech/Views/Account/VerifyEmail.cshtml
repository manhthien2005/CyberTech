@{
    ViewData["Title"] = "Xác minh email";
    Layout = "_Layout";
}

<div class="account-container">
    <div class="account-card">
        <div class="account-header">
            <h2>Xác minh email</h2>
        </div>
        
        <div class="verify-email-content">
            <div class="success-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            
            <p>Email của bạn đã được xác minh thành công!</p>
            
            <p>Bạn có thể đăng nhập và sử dụng đầy đủ các tính năng của tài khoản.</p>
            
            <div class="action-buttons">
                <a href="@Url.Action("Login", "Account")" class="btn-account btn-primary">
                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/account-pages.css">
    <style>
        .verify-email-content {
            text-align: center;
            padding: 20px 0;
        }
        
        .success-icon {
            font-size: 64px;
            color: #28a745;
            margin-bottom: 20px;
        }
        
        .action-buttons {
            margin-top: 25px;
        }
    </style>
} 