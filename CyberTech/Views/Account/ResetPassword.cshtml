@model dynamic
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "_Layout";
}

<div class="account-container">
    <div class="account-card">
        <div class="account-header">
            <h2>Đặt lại mật khẩu</h2>
            <p>Tạo mật khẩu mới cho tài khoản của bạn</p>
        </div>

        <form id="resetPasswordForm" asp-action="ResetPassword" method="post" class="account-form">
            @Html.AntiForgeryToken()
            <input type="hidden" name="token" value="@ViewData["Token"]" />
            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <div class="form-group">
                <label for="newPassword" class="form-label">Mật khẩu mới</label>
                <div class="password-input-group">
                    <input type="password" class="form-control" id="newPassword" name="newPassword" required />
                    <button type="button" class="password-toggle">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <div class="form-text">Mật khẩu phải có ít nhất 6 ký tự, bao gồm chữ hoa, chữ thường, số và ký tự đặc biệt.</div>
                <span class="text-danger" id="newPasswordError"></span>
            </div>

            <div class="form-group">
                <label for="confirmPassword" class="form-label">Xác nhận mật khẩu</label>
                <div class="password-input-group">
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required />
                    <button type="button" class="password-toggle">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <span class="text-danger" id="confirmPasswordError"></span>
            </div>

            <button type="submit" class="btn-account btn-primary">
                <i class="fas fa-key"></i>
                Đặt lại mật khẩu
            </button>
        </form>

        <div class="account-links">
            <a asp-action="Login">
                <i class="fas fa-arrow-left"></i>
                Quay lại đăng nhập
            </a>
        </div>
    </div>
</div>

@section Styles {
        <link rel="stylesheet" href="~/css/HomePage_Layout/styles.css">
    <link rel="stylesheet" href="~/css/account-pages.css">
}

@section Scripts {
    <script src="~/js/reset-password.js"></script>
}