@model dynamic
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "_Layout";

}

<div class="account-container">
    <div class="account-card">
        <div class="account-header">
            <h2>Quên mật khẩu</h2>
            <p>Nhập email của bạn để nhận link đặt lại mật khẩu</p>
        </div>

        <form id="forgotPasswordForm" asp-action="ForgotPassword" method="post" class="account-form">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" required />
                <span class="text-danger" id="emailError"></span>
            </div>

            <button type="submit" class="btn-account btn-primary">
                <i class="fas fa-paper-plane"></i>
                Gửi link đặt lại mật khẩu
            </button>

            <div class="account-links">
                <a asp-action="Login">
                    <i class="fas fa-arrow-left"></i>
                    Quay lại đăng nhập
                </a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/account-pages.css">
        <link rel="stylesheet" href="~/css/HomePage_Layout/styles.css">
}

@section Scripts {
    <script src="~/js/forgot-password.js"></script>
}