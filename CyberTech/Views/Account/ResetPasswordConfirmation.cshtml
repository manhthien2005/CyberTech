@{
    ViewData["Title"] = "Xác nhận yêu cầu đặt lại mật khẩu";
    Layout = "_Layout";
}

<div class="account-container">
    <div class="account-card">
        <div class="account-header">
            <div class="confirmation-icon">
                <i class="fas fa-envelope-open-text"></i>
            </div>
            <h2>Yêu cầu đặt lại mật khẩu đã được gửi</h2>
        </div>

        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i>
            <strong>Thành công!</strong> Chúng tôi đã gửi email hướng dẫn đặt lại mật khẩu đến địa chỉ email của bạn.
        </div>

        <div class="reset-password-steps">
            <h5>
                <i class="fas fa-info-circle"></i>
                Hướng dẫn
            </h5>
            <ol>
                <li>Kiểm tra hộp thư đến của bạn</li>
                <li>Nhấp vào liên kết trong email</li>
                <li>Đặt mật khẩu mới cho tài khoản của bạn</li>
            </ol>
        </div>

        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            <div>
                <strong>Lưu ý:</strong> Nếu bạn không nhận được email trong vòng vài phút:
                <ul>
                    <li>Kiểm tra thư mục spam</li>
                    <li>Xác nhận địa chỉ email của bạn</li>
                    <li>Thử gửi lại email</li>
                </ul>
            </div>
        </div>

        <div class="confirmation-actions">
            <a asp-action="Login" class="btn-account btn-primary">
                <i class="fas fa-sign-in-alt"></i>
                Quay lại đăng nhập
            </a>
            <a asp-action="ForgotPassword" class="btn-account btn-outline">
                <i class="fas fa-redo"></i>
                Gửi lại email
            </a>
        </div>
    </div>
</div>

@section Styles {
        <link rel="stylesheet" href="~/css/HomePage_Layout/styles.css">
    <link rel="stylesheet" href="~/css/account-pages.css">
}

@section Scripts {
    <script>
        $(document).ready(function() {
            const successMessage = '@TempData["SuccessMessage"]';
            if (successMessage) {
                utils.showToast(successMessage, "success");
            }
        });
    </script>
}