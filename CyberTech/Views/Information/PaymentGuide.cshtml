            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 15px;
        }

        .bank-account {
            display: flex;
            align-items: center;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .bank-logo {
            background: #e3f2fd;
            padding: 10px 15px;
            border-radius: 5px;
            margin-right: 15px;
            font-weight: bold;
            color: #007bff;
        }

        .account-details p {
            margin: 5px 0;
        }

        .bank-logos, .card-logos, .wallet-logos {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin: 15px 0;
        }

        .logo-item {
            background: #f8f9fa;
            padding: 8px 15px;
            border-radius: 5px;
            color: #555;
        }

        h3 {
            color: #2c3e50;
            margin: 15px 0 10px;
            font-size: 1.2rem;
        }

        ol, ul {
            padding-left: 20px;
            margin-bottom: 15px;
            color: #555;
        }

        ol li, ul li {
            margin-bottom: 8px;
        }

        .faq-section {
            margin-bottom: 40px;
        }

        .faq-section h2 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 30px;
        }

        .faq-item {
            margin-bottom: 15px;
            border: 1px solid #eee;
            border-radius: 8px;
            overflow: hidden;
        }

        .faq-question {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
            background: #f8f9fa;
            cursor: pointer;
        }

        .faq-question h3 {
            margin: 0;
            font-size: 1.1rem;
        }

        .faq-answer {
            padding: 15px 20px;
            color: #555;
            line-height: 1.6;
        }

        .support-section {
            text-align: center;
        }

        .support-section h2 {
            color: #2c3e50;
            margin-bottom: 15px;
        }

        .support-section > p {
            color: #555;
            margin-bottom: 20px;
        }

        .support-channels {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
