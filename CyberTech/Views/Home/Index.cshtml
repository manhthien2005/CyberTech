@model CyberTech.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to CyberTech!</h1>
        <p class="lead">Your one-stop shop for all tech products.</p>
        <hr class="my-4">
        <p>Explore our wide range of products including laptops, PCs, accessories and more.</p>
    </div>
    
    @if (Model?.FeaturedProducts?.Any() == true)
    {
        <div class="row">
            <div class="col-12">
                <h2>Featured Products</h2>
                <div class="row">
                    @foreach (var product in Model.FeaturedProducts)
                    {
                        <div class="col-md-3 mb-4">
                            <div class="card h-100">
                                <img src="@(product.ProductImages.FirstOrDefault()?.ImageURL ?? "/images/placeholder.jpg")" 
                                     class="card-img-top" alt="@product.Name">
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text">@product.Price.ToString("C0")</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    
    @if (Model?.NewProducts?.Any() == true)
    {
        <div class="row mt-4">
            <div class="col-12">
                <h2>New Products</h2>
                <div class="row">
                    @foreach (var product in Model.NewProducts)
                    {
                        <div class="col-md-3 mb-4">
                            <div class="card h-100">
                                <img src="@(product.ProductImages.FirstOrDefault()?.ImageURL ?? "/images/placeholder.jpg")" 
                                     class="card-img-top" alt="@product.Name">
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text">@product.Price.ToString("C0")</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    
    <div class="row mt-4">
        <div class="col-12">
            <div class="alert alert-info">
                Application is running successfully. Railway deployment is working!
            </div>
        </div>
    </div>
</div>