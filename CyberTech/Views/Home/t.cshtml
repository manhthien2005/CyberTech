@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(ViewData["ProfileImage"]?.ToString()))
                        {
                            <img src="@ViewData["ProfileImage"]" alt="Profile" class="rounded-circle mb-3" 
                                 style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #007bff;">
                        }
                        else
                        {
                            <img src="~/images/default-avatar.png" alt="Default Profile" class="rounded-circle mb-3" 
                                 style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #007bff;">
                        }
                        <h4 class="card-title">@ViewData["UserName"]</h4>
                        <p class="card-text text-muted">@ViewData["UserEmail"]</p>
                        <p class="card-text">
                            <span class="badge bg-primary">@ViewData["UserRole"]</span>
                        </p>
                        @if (ViewData["LastLogin"] != null)
                        {
                            <p class="card-text">
                                <small class="text-muted">Last login: @ViewData["LastLogin"]</small>
                            </p>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Welcome to CyberTech Shop</h5>
                        <p class="card-text">Your one-stop shop for all your tech needs.</p>
                        <a href="/Products" class="btn btn-primary">Browse Products</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center">
            <h1 class="display-4">Welcome to CyberTech Shop</h1>
            <p class="lead">Your one-stop shop for all your tech needs.</p>
            <div class="mt-4">
                <a href="/Account/Login" class="btn btn-primary me-2">Login</a>
                <a href="/Account/Register" class="btn btn-outline-primary">Register</a>
            </div>
        </div>
    }
</div>
