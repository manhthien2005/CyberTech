            // Unbind all event listeners
            unbindEvents: function() {
                $(document).off('.cartManager');
                $('#applyVoucherForm').off('.cartManager');
            },

            // Bind all event listeners using event delegation
            bindEvents: function() {
                const self = this;
                
                // Quantity control buttons - using event delegation
                $(document).on('click.cartManager', '.quantity-btn', function() {
                    self.handleQuantityButton($(this));
                });

                // Direct quantity input change - using event delegation
                $(document).on('change.cartManager blur.cartManager', '.quantity-input', function() {
                    const value = $(this).val().trim();
                    // Ensure empty inputs get a default value
                    if (value === '' || isNaN(parseInt(value))) {
                        const min = parseInt($(this).attr('min')) || 1;
                        const lastValidValue = $(this).data('last-valid-value') || min;
                        $(this).val(lastValidValue);
                    }
                    CartManager.handleQuantityChange($(this));
                });

                // Prevent non-numeric input for quantity
                $(document).on('input.cartManager', '.quantity-input', function(e) {
                    const value = e.target.value;
                    if (!/^\d*$/.test(value)) {
                        e.target.value = value.replace(/\D/g, '');
                        utils.showToast('Vui lòng chỉ nhập số', 'warning');
                    }
                    
                    // Handle empty input
                    if (value === '') {
                        const min = parseInt($(this).attr('min')) || 1;
                        $(this).data('last-valid-value', min);
                    } else if (value !== '' && !isNaN(parseInt(value))) {
                        $(this).data('last-valid-value', parseInt(value));
                    }
                });

                // Prevent non-numeric keypress for quantity inputs
                $(document).on('keypress.cartManager', '.quantity-input', function(e) {
                    const charCode = (e.which) ? e.which : e.keyCode;
                    if (charCode > 31 && (charCode < 48 || charCode > 57)) {
                        e.preventDefault();
                        utils.showToast('Vui lòng chỉ nhập số', 'warning');
                        return false;
                    }
                    return true;
                });

                // Remove cart item - using event delegation
                $(document).on('click.cartManager', '.btn-remove-cart-item', function() {
                    self.handleRemoveItem($(this));
