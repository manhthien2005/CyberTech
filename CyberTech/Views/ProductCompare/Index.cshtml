            font-size: 0.8rem;
            font-weight: 700;
            margin-left: 8px;
        }

        @@media (max-width: 768px) {
            .compare-table-container {
                overflow-x: auto;
            }
            
            .compare-table {
                min-width: 800px;
            }
            
            .recommended-product {
                flex-direction: column;
                text-align: center;
            }
            
            .suggested-grid {
                grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            }
        }
    </style>
}

