    color: white;
    cursor: pointer;
    padding: 6px;
    border-radius: 50%;
    transition: all 0.2s ease;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-remove-compare:hover {
    background: #ff3838;
    transform: scale(1.1);
}

.bubble-actions {
    padding: 15px 20px;
    border-top: 1px solid #e9ecef;
    display: flex;
    gap: 10px;
    background: #f8f9fa;
}

.bubble-actions .btn {
    flex: 1;
    padding: 10px 15px;
    font-size: 14px;
    border-radius: 8px;
    font-weight: 600;
    transition: all 0.2s ease;
}

.bubble-actions .btn:hover {
    transform: translateY(-2px);
}

.bubble-actions .btn-success {
    background: linear-gradient(135deg, #198754, #20c997);
    border-color: #198754;
    color: white;
}

.bubble-actions .btn-success:hover {
    background: linear-gradient(135deg, #157347, #0d7f4a);
    border-color: #157347;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(25, 135, 84, 0.3);
