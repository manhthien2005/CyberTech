}

.empty-icon {
    font-size: 48px;
    color: #198754;
    margin-bottom: 15px;
    opacity: 0.6;
}

.empty-text p {
    margin: 8px 0;
    line-height: 1.4;
}

.empty-text p:first-child {
    color: #495057;
    font-size: 16px;
}

.empty-text p:last-child {
    font-size: 14px;
    opacity: 0.8;
}

