<style>
.floating-compare-bubble {
    position: fixed;
    bottom: 90px;
    right: 20px;
    z-index: 999;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.bubble-trigger {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #198754, #20c997);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 5px 25px rgba(25, 135, 84, 0.3);
    transition: all 0.3s ease;
    position: relative;
}

.bubble-trigger:hover {
    transform: translateX(-10px) scale(1.1);
    box-shadow: 0 8px 30px rgba(25, 135, 84, 0.5);
    background: linear-gradient(135deg, #157347, #0d7f4a);
}

.bubble-trigger i {
    color: white;
    font-size: 20px;
    transition: transform 0.3s ease;
}

.bubble-trigger:hover i {
    transform: rotate(15deg);
}

.bubble-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background: linear-gradient(135deg, #fd7e14, #dc3545);
    color: white;
    border-radius: 50%;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: bold;
    border: 2px solid white;
    animation: pulse 2s infinite;
    box-shadow: 0 2px 8px rgba(220, 53, 69, 0.3);
}

@@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
}

.bubble-tooltip {
    position: absolute;
    top: 50%;
    right: 75px;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 8px 12px;
    border-radius: 20px;
    font-size: 14px;
    white-space: nowrap;
    opacity: 0;
    transform: translateY(-50%) translateX(10px);
    transition: all 0.3s ease;
    pointer-events: none;
    z-index: 1001;
}

.bubble-trigger:hover + .bubble-tooltip {
    opacity: 1;
    transform: translateY(-50%) translateX(0);
}

.bubble-tooltip::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 100%;
    transform: translateY(-50%);
    border: 6px solid transparent;
    border-left-color: rgba(0, 0, 0, 0.8);
}

.bubble-content {
    position: absolute;
    bottom: 0px;
    right: 65px;
    width: 350px;
    background: white;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
    border: 1px solid #e9ecef;
    overflow: hidden;
    transform: translateY(20px) scale(0.9);
    opacity: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 998;
}

.bubble-content.show {
    transform: translateY(0) scale(1);
    opacity: 1;
}

.bubble-content::after {
    content: '';
    position: absolute;
    top: 100%;
    right: 50px;
    border: 12px solid transparent;
    border-top-color: white;
}

.bubble-header {
    background: linear-gradient(135deg, #198754, #157347);
    color: white;
    padding: 15px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.bubble-title {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 600;
    font-size: 16px;
}

.bubble-close {
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    padding: 4px;
    border-radius: 50%;
    transition: background 0.2s ease;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.bubble-close:hover {
    background: rgba(255, 255, 255, 0.2);
}

.bubble-products {
    max-height: 300px;
    overflow-y: auto;
    padding: 15px;
}

.compare-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    border-radius: 12px;
    margin-bottom: 10px;
    background: #f8f9fa;
    transition: all 0.2s ease;
    border: 1px solid transparent;
}

.compare-item:hover {
    background: #e9ecef;
    border-color: #198754;
